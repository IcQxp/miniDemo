<Page x:Class="WpfApp1.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid Background="White">
        <StackPanel Width="200" VerticalAlignment="Center">
            <TextBlock Text="Введите почту:" ></TextBlock>
            <TextBox x:Name="emailTextBox" Margin="0 10 0 10"></TextBox>
            <TextBlock Text="Введите пароль:"></TextBlock>
            <PasswordBox x:Name="passwordTextBox" Margin="0 10 0 10"></PasswordBox>
            <Button Content="Войти" Height="30"></Button>
        </StackPanel>
    </Grid>
</Page>
